<h2>Lista de Categorias</h2>

<hr/>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br/>
            <small>Data de Criação: {{date}}</small>
            <br>
                                        <!--passando o id da categoria-->
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>

            <!--campo que vai excluir a categoria-->
            <form action="/admin/categorias/delete" method="POST">
                <!--campo invisivel para guardar o id da categoria atual-->
                <input type="hidden" name='id' value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <!--caso não exista categorias para exibir-->
    <h4 class="mt-3">Nenhuma categoria registrada</h4>

{{/each}}
